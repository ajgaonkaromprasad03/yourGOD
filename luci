---------------------------------------------------
java
---------------------------------------------------
package com.example.slip17q1;

import android.content.Intent;
import android.net.Uri;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;

import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        Button btnMakeCall = findViewById(R.id.btnMakeCall);

        btnMakeCall.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                makePhoneCall();
            }
        });
    }

    private void makePhoneCall() {
        String phoneNumber = "918767412050"; // Replace with your phone number

        // Create an Intent with action type ACTION_CALL
        Intent intent = new Intent(Intent.ACTION_CALL);

        // Set the phone number to dial
        intent.setData(Uri.parse("tel:" + phoneNumber));

        // Check if the device can handle the intent
        if (intent.resolveActivity(getPackageManager()) != null) {
            // Start the dialer activity with the phone number
            startActivity(intent);
        } else {
            // If the device cannot handle the intent (no dialer app installed)
            // Display a toast or alert dialog
            // For this example, we'll simply log an error message
            android.util.Log.e("Phone Call", "Unable to make phone call. No dialer app installed.");
        }
    }
}


