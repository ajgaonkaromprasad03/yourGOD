Activityjavafile
----------------------------------------
package com.example.slip19q2;

import android.os.Bundle;
import android.widget.TextView;

import androidx.appcompat.app.AppCompatActivity;

public class DisplayDataActivity extends AppCompatActivity {

    TextView tvFullName, tvGender, tvCurrentWeight, tvHeight;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_display_data);

        tvFullName = findViewById(R.id.tvFullName);
        tvGender = findViewById(R.id.tvGender);
        tvCurrentWeight = findViewById(R.id.tvCurrentWeight);
        tvHeight = findViewById(R.id.tvHeight);

        // Retrieve data from intent
        String fullName = getIntent().getStringExtra("FULL_NAME");
        String currentWeight = getIntent().getStringExtra("CURRENT_WEIGHT");
        String height = getIntent().getStringExtra("HEIGHT");
        String gender = getIntent().getStringExtra("GENDER");

        // Set data to TextViews
        tvFullName.setText("Full Name: " + fullName);
        tvGender.setText("Gender: " + gender);
        tvCurrentWeight.setText("Current Weight: " + currentWeight + " kg");
        tvHeight.setText("Height: " + height + " cm");
    }
}

























